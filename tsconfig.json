{
  "compileOnSave": true,
  "compilerOptions": {
	  "typeRoots": [
		  "node_modules/@types",
		  "CustomTypes"
	  ],
	  "types": [
		  "mocha",
		  "express"
	  ],
	  "module": "commonjs",
	  "target": "es6",
	  "sourceMap": true,
	  "removeComments": true,
	  "preserveConstEnums": true,
	  "outDir": "build",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
	  "allowJs": true
  },
	"exclude":["node_modules"],
	"include":["src"]
}
